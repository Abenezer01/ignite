{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "yarn install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "compile": {
      "name": "compile",
      "command": "yarn compile",
      "runAtStart": true
    },
    "typecheck": {
      "name": "typecheck",
      "command": "yarn typecheck",
      "runAtStart": false
    },
    "build": {
      "name": "build",
      "command": "yarn build",
      "runAtStart": false
    },
    "build:assets": {
      "name": "build:assets",
      "command": "yarn build:assets",
      "runAtStart": false
    },
    "build:watch": {
      "name": "build:watch",
      "command": "yarn build:watch",
      "runAtStart": false
    },
    "format": {
      "name": "format",
      "command": "yarn format",
      "runAtStart": false
    },
    "format:write": {
      "name": "format:write",
      "command": "yarn format:write",
      "runAtStart": false
    },
    "format:check": {
      "name": "format:check",
      "command": "yarn format:check",
      "runAtStart": false
    },
    "lint": {
      "name": "lint",
      "command": "yarn lint",
      "runAtStart": false
    },
    "test": {
      "name": "test",
      "command": "yarn test",
      "runAtStart": false
    },
    "watch": {
      "name": "watch",
      "command": "yarn watch",
      "runAtStart": false
    },
    "watch:debug": {
      "name": "watch:debug",
      "command": "yarn watch:debug",
      "runAtStart": false
    },
    "coverage": {
      "name": "coverage",
      "command": "yarn coverage",
      "runAtStart": false
    },
    "ci:publish": {
      "name": "ci:publish",
      "command": "yarn ci:publish",
      "runAtStart": false
    },
    "semantic-release": {
      "name": "semantic-release",
      "command": "yarn semantic-release",
      "runAtStart": false
    },
    "clean": {
      "name": "clean",
      "command": "yarn clean",
      "runAtStart": false
    },
    "ignite-cli:dev": {
      "name": "ignite-cli:dev",
      "command": "yarn ignite-cli:dev",
      "runAtStart": false
    },
    "ignite-cli:prod": {
      "name": "ignite-cli:prod",
      "command": "yarn ignite-cli:prod",
      "runAtStart": false
    }
  }
}
